<div class="row cols-33-66 pt32">
  <div class="col">

    <a href="<%=asset_path("fot/pilar-vara-01.jpg")%>" class="fancybox" title="La Dra. Pilar Vara">
      <%= image_tag(asset_path("fot/pilar-vara-01.jpg"), class: "w100", alt: "La Dra. Pilar Vara") %>
